<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inputButtons"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent" >

    <Spinner
        android:id="@+id/rangeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/ilayout1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rangeSpinner"
        android:orientation="vertical" >

        <Button
            style="@style/InputButtonLand"
            android:tag="in1" />

        <Button
            style="@style/InputButtonLand"
            android:tag="in5" />

        <Button
            style="@style/InputButtonLand"
            android:tag="in9" />

        <Button
            style="@style/InputButtonLand"
            android:tag="in13" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ilayout2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rangeSpinner"
        android:layout_toRightOf="@+id/ilayout1"
        android:orientation="vertical" >

        <Button
            style="@style/InputButtonLand"
            android:tag="in2" />

        <Button
            style="@style/InputButtonLand"
            android:tag="in6" />

        <Button
            style="@style/InputButtonLand"
            android:tag="in10" />

        <Button
            style="@style/InputButtonLand"
            android:tag="in14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ilayout3"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rangeSpinner"
        android:layout_toRightOf="@+id/ilayout2"
        android:orientation="vertical" >

        <Button
            style="@style/InputButtonLand"
            android:tag="in3" />

        <Button
            style="@style/InputButtonLand"
            android:tag="in7" />

        <Button
            style="@style/InputButtonLand"
            android:tag="in11" />

        <Button
            style="@style/InputButtonLand"
            android:tag="in15" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ilayout4"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rangeSpinner"
        android:layout_toRightOf="@+id/ilayout3"
        android:orientation="vertical" >

        <Button
            style="@style/InputButtonLand"
            android:tag="in4" />

        <Button
            style="@style/InputButtonLand"
            android:tag="in8" />

        <Button
            style="@style/InputButtonLand"
            android:tag="in12" />

        <Button
            style="@style/InputButtonLand"
            android:tag="in16" />
    </LinearLayout>

</RelativeLayout>