<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/pref_gameplay_title" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_auto_fillin"
            android:title="@string/pref_auto_fillin"
            android:summaryOn="@string/pref_auto_fillin_on"
            android:summaryOff="@string/pref_auto_fillin_off" />

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/pref_feedback_list_titles"
            android:entryValues="@array/pref_feedback_list_values"
            android:key="pref_feedback"
            android:title="@string/pref_choose_feedback" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_colors_title" >
        <afzkl.development.colorpickerview.preference.ColorPickerPreference
            android:defaultValue="0xFFFFFFFF"
            android:key="pref_cell_color"
            android:title="@string/pref_cell_color_title" />
        <afzkl.development.colorpickerview.preference.ColorPickerPreference
            android:defaultValue="0xFF000000"
            android:key="pref_number_color"
            android:title="@string/pref_number_color_title" />
    </PreferenceCategory>

</PreferenceScreen>